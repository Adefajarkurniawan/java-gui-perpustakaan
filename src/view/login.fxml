<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.LoginController" alignment="CENTER" spacing="15" stylesheets="@style.css"
      prefWidth="350" prefHeight="400">
    
    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>

    <Label text="Login Perpustakaan" styleClass="header-label"/>
    <TextField fx:id="txtUsername" promptText="Username"/>
    <PasswordField fx:id="txtPassword" promptText="Password"/>
    <Button text="Login" onAction="#handleLogin" styleClass="btn-primary" maxWidth="Infinity"/>
    <HBox spacing="10" alignment="CENTER">
        <Label text="Belum punya akun?"/>
        <Hyperlink fx:id="linkRegister" text="Daftar" onAction="#goToRegister"/>
    </HBox>
    <Label fx:id="lblMessage" styleClass="error-label"/>

</VBox>