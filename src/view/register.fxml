<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.RegisterController" alignment="CENTER" spacing="15" stylesheets="@style.css"
      prefWidth="350" prefHeight="400">

    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>

    <Label text="Registrasi Akun Baru" styleClass="header-label"/>
    <TextField fx:id="txtUsername" promptText="Username" maxWidth="300"/>
    <PasswordField fx:id="txtPassword" promptText="Password" maxWidth="300"/>
    <PasswordField fx:id="txtConfirmPassword" promptText="Konfirmasi Password" maxWidth="300"/>
    <Button text="Daftar" onAction="#handleRegister" styleClass="btn-primary" maxWidth="300"/>
    <HBox spacing="10" alignment="CENTER">
        <Label text="Sudah punya akun?"/>
        <Hyperlink fx:id="linkLogin" text="Login" onAction="#goToLogin"/>
    </HBox>
    <Label fx:id="lblMessage" styleClass="error-label"/>

</VBox>