<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.UserDashboardController"
      spacing="15" alignment="CENTER" stylesheets="@style.css"
      prefWidth="900" prefHeight="700">

    <!-- Header -->
    <Label text="Dashboard User" styleClass="header-label" />

    <!-- Search bar -->
    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="txtSearch" promptText="Cari buku..." prefWidth="400"/>
        <Button text="Cari" onAction="#handleSearch"/>
        <Button text="Riwayat Peminjaman" onAction="#openBorrowHistory" styleClass="btn-primary"/>
        
    </HBox>

    <!-- Table buku -->
    <TableView fx:id="tableBooks" prefWidth="650" prefHeight="350">
        <columns>
            <TableColumn fx:id="colTitle" text="Judul" prefWidth="250"/>
            <TableColumn fx:id="colAuthor" text="Penulis" prefWidth="180"/>
            <TableColumn fx:id="colYear" text="Tahun Terbit" prefWidth="100"/>
            <TableColumn fx:id="colGenre" text="Genre" prefWidth="120"/>
            <TableColumn fx:id="colAction" text="Aksi" prefWidth="100"/>
        </columns>
    </TableView>

</VBox>
